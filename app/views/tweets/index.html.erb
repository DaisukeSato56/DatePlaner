
<div class="container">
  <%= form_for @tweet do |f| %>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">textsms</i>
            <%= f.text_field :body, id: "autocomplete-input", class: "autocomplete" %>
            <% f.label "Autocomplete", for: "autocomplete-input" %>
          </div>
        </div>
      </div>
    </div>

    <%= f.submit "Submit", class: "btn waves-effect waves-light", name: "action" %>
      <!-- <i class="material-icons right">send</i>
    </button> -->
  <% end %>
</div>
